            android:orientation="vertical"/>


        <TextView
            android:id="@+id/display"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:autoSizeMaxTextSize="70dp"
            android:autoSizeMinTextSize="12dp"
            android:autoSizeStepGranularity="1dp"
            android:autoSizeTextType="uniform"
            android:textAlignment="textEnd"
            android:textColor="#D1D1D1"
            android:textStyle="bold"
            android:maxLines="1"
            app:layout_constraintBottom_toTopOf="@+id/r11"
            app:layout_constraintEnd_toStartOf="@+id/c8"
            app:layout_constraintStart_toStartOf="@+id/c1"
            app:layout_constraintTop_toTopOf="@+id/r13" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"

            app:layout_constraintBottom_toTopOf="@+id/r12"
            app:layout_constraintEnd_toStartOf="@+id/c8"
            app:layout_constraintStart_toStartOf="@+id/c1" />


        <ImageButton
            android:id="@+id/btnAC"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_clear"
            app:layout_constraintBottom_toTopOf="@+id/r9"
            app:layout_constraintEnd_toStartOf="@+id/c2"
            app:layout_constraintStart_toStartOf="@+id/c1"
            app:layout_constraintTop_toTopOf="@+id/r10" />

