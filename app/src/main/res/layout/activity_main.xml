            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_eq"
            app:layout_constraintBottom_toTopOf="@+id/r1"
            app:layout_constraintEnd_toStartOf="@+id/c8"
