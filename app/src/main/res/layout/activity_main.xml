            app:layout_constraintEnd_toStartOf="@+id/c4"
            app:layout_constraintStart_toStartOf="@+id/c3"
            app:layout_constraintTop_toTopOf="@+id/r8" />

        <ImageButton
            android:id="@+id/btn9"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_9"
            app:layout_constraintBottom_toTopOf="@+id/r7"
            app:layout_constraintEnd_toStartOf="@+id/c6"
            app:layout_constraintStart_toStartOf="@+id/c5"
            app:layout_constraintTop_toTopOf="@+id/r8" />

        <ImageButton
            android:id="@+id/btnMin"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_min"
            app:layout_constraintBottom_toTopOf="@+id/r7"
            app:layout_constraintEnd_toStartOf="@+id/c8"
            app:layout_constraintStart_toStartOf="@+id/c7"
            app:layout_constraintTop_toTopOf="@+id/r8" />

        <ImageButton
            android:id="@+id/btn4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_4"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toStartOf="@+id/c2"
            app:layout_constraintStart_toStartOf="@+id/c1"
            app:layout_constraintTop_toTopOf="@+id/r6" />

        <ImageButton
