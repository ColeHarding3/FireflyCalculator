            app:layout_constraintTop_toTopOf="@+id/r6" />

        <ImageButton
            android:id="@+id/btn6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_6"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toStartOf="@+id/c6"
            app:layout_constraintStart_toStartOf="@+id/c5"
            app:layout_constraintTop_toTopOf="@+id/r6" />

        <ImageButton
            android:id="@+id/btnAdd"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_add"
            app:layout_constraintBottom_toTopOf="@+id/r5"
            app:layout_constraintEnd_toStartOf="@+id/c8"
            app:layout_constraintStart_toStartOf="@+id/c7"
            app:layout_constraintTop_toTopOf="@+id/r6" />

